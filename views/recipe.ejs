<!DOCTYPE html>
<html>
    <head>
        <title><%= title %></title>
        <link href="/beer.min.css" rel="stylesheet">
        <link href="/beertheme.css" rel="stylesheet">
        <script type="module" src="/beer.min.js"></script>
    </head>
    <body class="light" style="background-color: var(--primary)">
        <%- include('header.ejs') %>
        <main class="responsive">
            <article class="no-padding margin round">
                <% if (imageUrl) { %>
                <img src="<%= imageUrl %>" alt="Image for <%= title %>" class="responsive top-round no-padding">
                <% } %>
                <div class="large-padding large-margin">
                    <h2><%= title %></h2>

                    <h5>Ingredients:</h5>
                    <ul>
                        <% ingredients.forEach(ingredient => { %>
                            <li><%= ingredient %></li>
                        <% }); %>
                    </ul>

                    <h5>Instructions:</h5>
                    <% instructions.forEach(instruction => { %>
                        <p><%= instruction %></p>
                    <% }); %>
                </div>
            </article>
        </main>
        <%- include('footer.ejs') %>
    </body>
</html>
