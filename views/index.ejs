<!DOCTYPE html>
<html>
    <head>
        <title>Recipe Trove</title>
        <link href="/beer.min.css" rel="stylesheet">
        <link href="/beertheme.css" rel="stylesheet">
        <script type="module" src="/beer.min.js"></script>
    </head>
    <body class="light" style="background-color: orange;">
        <%- include('header.ejs') %>
        <main class="responsive center-align">
            <div class="grid">
            <% recipes.forEach(recipe => { %>
                <a href="<%= recipe.slug %>" class="round s6 l3">
                <article class="round">
                    <% if (recipe.imageUrl) { %>
                        <img src="<%= recipe.imageUrl %>" alt="Image for <%= recipe.title %>" class="responsive round no-padding">
                    <% } %>
                    <p><%= recipe.title %></p>
                </article>
                </a>
                <% }); %>
            </div>
            <a href="add.html">
                <button class="surface round elevate">
                    <i>add</i> Add New
                </button>
            </a>      
        </main>
        <%- include('footer.ejs') %>
    </body>
</html>
